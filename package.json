{
  "name": "cosmic-animation",
  "version": "1.0.0",
  "description": "A library for creating fast and robust CSS animations with JavaScript. Minimalistic and effective.",
  "keywords": [
    "animation",
    "animations",
    "cosmic",
    "astro",
    "fantastic",
    "javascript",
    "js",
    "css",
    "minimalist"
  ],
  "author": {
    "name": "Brandon Anthony",
    "email": "brandonolivares.developer@gmail.com",
    "url": "https://webdev.brandondeveloper.com/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cosmic-dev-code/cosmic-animation"
  },
  "homepage": "https://github.com/cosmic-dev-code/cosmic-animation#readme",
  "main": "./dist/index.js",
  "license": "MIT",
  "scripts": {
    "start": "cd ./scripts & run.bat",
    "build": "babel src --out-dir dist --extensions \".ts,.tsx\""
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "typescript": "^5.7.2"
  },
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "dependencies": {
    "@babel/cli": "^7.26.4",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-typescript": "^7.26.0",
    "http-server": "^14.1.1"
  }
}
